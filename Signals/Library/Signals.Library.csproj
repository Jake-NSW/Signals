<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<AssemblyName>Signals.Library</AssemblyName>
		<PackageId>Signals.Library</PackageId>
		<LangVersion>11</LangVersion>
		<NoWarn>1701;1702;1591;</NoWarn>
		<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
		<DefineConstants>SANDBOX;ADDON;DEBUG</DefineConstants>
		<AllowUnsafeBlocks>False</AllowUnsafeBlocks>
	</PropertyGroup>

	<ItemGroup>
		
		<None Update="**\*.cs.scss" DependentUpon="%(Filename)" />
		<Compile Update="**\*.razor.cs" DependentUpon="%(Filename)" />
		<None Update="**\*.razor.scss" DependentUpon="%(Filename)" />

	</ItemGroup>

	<ItemGroup>
	  <AdditionalFiles Include="**/*.razor" />
	</ItemGroup>


	<ItemGroup>
		<Using Include="Sandbox.Internal.GlobalGameNamespace" Static="true" />
	</ItemGroup>

  <PropertyGroup>
	<OutputPath>D:\Programs\Steam\steamapps\common\sbox/.vs/output/</OutputPath>
	<DocumentationFile>D:\Programs\Steam\steamapps\common\sbox/.vs/output/Signals.Library.xml</DocumentationFile>
	<RootNamespace>Woosh.Signals</RootNamespace>
	<Nullable>disable</Nullable>
  </PropertyGroup>

	<ItemGroup>
		<Analyzer Include="D:\Programs\Steam\steamapps\common\sbox\bin\managed\Sandbox.Generator.dll" />
		<Reference Include="D:\Programs\Steam\steamapps\common\sbox\bin\managed/Sandbox.System.dll" />
		<Reference Include="D:\Programs\Steam\steamapps\common\sbox\bin\managed/Sandbox.Engine.dll" />
		<Reference Include="D:\Programs\Steam\steamapps\common\sbox\bin\managed/Sandbox.Game.dll" />
		<Reference Include="D:\Programs\Steam\steamapps\common\sbox\bin\managed/Sandbox.Event.dll" />
		<Reference Include="D:\Programs\Steam\steamapps\common\sbox\bin\managed/Sandbox.Bind.dll" />
		<Reference Include="D:\Programs\Steam\steamapps\common\sbox\bin\managed/Sandbox.Reflection.dll" />
	</ItemGroup>

</Project>
